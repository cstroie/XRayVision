{
  "openapi": "3.0.3",
  "info": {
    "title": "XRayVision API",
    "description": "API for the XRayVision DICOM processor with OpenAI integration",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "XRayVision server"
    }
  ],
  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    },
    "schemas": {
      "Exam": {
        "type": "object",
        "properties": {
          "uid": {
            "type": "string",
            "description": "Unique identifier of the exam (SOP Instance UID)"
          },
          "patient": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Patient full name"
              },
              "cnp": {
                "type": "string",
                "description": "Patient CNP (Romanian personal identification number)"
              },
              "age": {
                "type": "integer",
                "description": "Patient age in years"
              },
              "sex": {
                "type": "string",
                "enum": ["M", "F", "O"],
                "description": "Patient sex (M, F, or O)"
              }
            }
          },
          "exam": {
            "type": "object",
            "properties": {
              "created": {
                "type": "string",
                "format": "date-time",
                "description": "Exam timestamp"
              },
              "date": {
                "type": "string",
                "description": "Exam date in YYYYMMDD format"
              },
              "time": {
                "type": "string",
                "description": "Exam time in HHMMSS format"
              },
              "protocol": {
                "type": "string",
                "description": "Imaging protocol name from DICOM"
              },
              "region": {
                "type": "string",
                "description": "Anatomic region identified from protocol"
              }
            }
          },
          "report": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string",
                "description": "AI-generated report content"
              },
              "short": {
                "type": "string",
                "enum": ["yes", "no"],
                "description": "Whether pathological findings are present"
              },
              "datetime": {
                "type": "string",
                "format": "date-time",
                "description": "Report creation timestamp"
              },
              "positive": {
                "type": "boolean",
                "description": "Binary indicator of findings"
              },
              "valid": {
                "type": "boolean",
                "description": "Validation status"
              },
              "reviewed": {
                "type": "boolean",
                "description": "Whether the report has been reviewed"
              }
            }
          },
          "status": {
            "type": "string",
            "enum": ["none", "queued", "processing", "done", "error", "ignore"],
            "description": "Processing status"
          }
        }
      },
      "Stats": {
        "type": "object",
        "properties": {
          "total": {
            "type": "integer",
            "description": "Total number of exams"
          },
          "reviewed": {
            "type": "integer",
            "description": "Number of reviewed exams"
          },
          "positive": {
            "type": "integer",
            "description": "Number of positive findings"
          },
          "correct": {
            "type": "integer",
            "description": "Number of correct predictions"
          },
          "wrong": {
            "type": "integer",
            "description": "Number of wrong predictions"
          },
          "region": {
            "type": "object",
            "description": "Regional statistics",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "total": {
                  "type": "integer"
                },
                "reviewed": {
                  "type": "integer"
                },
                "positive": {
                  "type": "integer"
                },
                "wrong": {
                  "type": "integer"
                },
                "tpos": {
                  "type": "integer"
                },
                "tneg": {
                  "type": "integer"
                },
                "fpos": {
                  "type": "integer"
                },
                "fneg": {
                  "type": "integer"
                },
                "ppv": {
                  "oneOf": [
                    {
                      "type": "integer"
                    },
                    {
                      "type": "string",
                      "enum": ["-"]
                    }
                  ]
                },
                "pnv": {
                  "oneOf": [
                    {
                      "type": "integer"
                    },
                    {
                      "type": "string",
                      "enum": ["-"]
                    }
                  ]
                },
                "snsi": {
                  "oneOf": [
                    {
                      "type": "integer"
                    },
                    {
                      "type": "string",
                      "enum": ["-"]
                    }
                  ]
                },
                "spci": {
                  "oneOf": [
                    {
                      "type": "integer"
                    },
                    {
                      "type": "string",
                      "enum": ["-"]
                    }
                  ]
                }
              }
            }
          },
          "trends": {
            "type": "object",
            "description": "Temporal trends by region"
          },
          "monthly_trends": {
            "type": "object",
            "description": "Monthly trends by region"
          },
          "avg_processing_time": {
            "type": "number",
            "description": "Average processing time in seconds"
          },
          "throughput": {
            "type": "number",
            "description": "Processing throughput (exams per hour)"
          },
          "error_stats": {
            "type": "object",
            "description": "Error statistics"
          }
        }
      },
      "Config": {
        "type": "object",
        "properties": {
          "OPENAI_URL_PRIMARY": {
            "type": "string",
            "description": "Primary OpenAI API URL"
          },
          "OPENAI_URL_SECONDARY": {
            "type": "string",
            "description": "Secondary OpenAI API URL"
          },
          "NTFY_URL": {
            "type": "string",
            "description": "NTFY notification URL"
          },
          "AE_TITLE": {
            "type": "string",
            "description": "DICOM AE Title"
          },
          "AE_PORT": {
            "type": "integer",
            "description": "DICOM AE Port"
          },
          "REMOTE_AE_TITLE": {
            "type": "string",
            "description": "Remote DICOM AE Title"
          },
          "REMOTE_AE_IP": {
            "type": "string",
            "description": "Remote DICOM AE IP"
          },
          "REMOTE_AE_PORT": {
            "type": "integer",
            "description": "Remote DICOM AE Port"
          }
        }
      },
      "ValidateRequest": {
        "type": "object",
        "properties": {
          "uid": {
            "type": "string",
            "description": "Unique identifier of the exam"
          },
          "normal": {
            "type": "boolean",
            "description": "Whether the human reviewer marked the case as normal"
          }
        },
        "required": ["uid"]
      },
      "LookAgainRequest": {
        "type": "object",
        "properties": {
          "uid": {
            "type": "string",
            "description": "Unique identifier of the exam"
          },
          "prompt": {
            "type": "string",
            "description": "Optional custom prompt"
          }
        },
        "required": ["uid"]
      },
      "QueryRequest": {
        "type": "object",
        "properties": {
          "hours": {
            "type": "integer",
            "description": "Number of hours to look back for studies",
            "default": 3
          }
        }
      },
      "CheckReportRequest": {
        "type": "object",
        "properties": {
          "report": {
            "type": "string",
            "description": "Radiology report text to analyze"
          }
        },
        "required": ["report"]
      },
      "CheckReportResponse": {
        "type": "object",
        "properties": {
          "pathologic": {
            "type": "string",
            "enum": ["yes", "no"],
            "description": "Whether any anomaly exists"
          },
          "severity": {
            "type": "integer",
            "minimum": 0,
            "maximum": 10,
            "description": "Severity score (0-10)"
          },
          "summary": {
            "type": "string",
            "description": "Diagnosis in maximum 5 words"
          }
        }
      }
    }
  },
  "paths": {
    "/": {
      "get": {
        "summary": "Serve dashboard page",
        "description": "Serve the main dashboard HTML page",
        "responses": {
          "200": {
            "description": "Dashboard HTML page",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/stats": {
      "get": {
        "summary": "Serve statistics page",
        "description": "Serve the statistics HTML page",
        "responses": {
          "200": {
            "description": "Statistics HTML page",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/about": {
      "get": {
        "summary": "Serve about page",
        "description": "Serve the about HTML page",
        "responses": {
          "200": {
            "description": "About HTML page",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/check": {
      "get": {
        "summary": "Serve report check page",
        "description": "Serve the report check HTML page",
        "responses": {
          "200": {
            "description": "Check HTML page",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/favicon.ico": {
      "get": {
        "summary": "Serve favicon",
        "description": "Serve the favicon.ico file",
        "responses": {
          "200": {
            "description": "Favicon file",
            "content": {
              "image/x-icon": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        }
      }
    },
    "/ws": {
      "get": {
        "summary": "WebSocket connection",
        "description": "Handle WebSocket connections for real-time dashboard updates",
        "responses": {
          "101": {
            "description": "WebSocket connection established"
          }
        }
      }
    },
    "/api/exams": {
      "get": {
        "summary": "Get exams",
        "description": "Provide paginated exam data with optional filters",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "Page number"
          },
          {
            "name": "reviewed",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["any", "yes", "no"]
            },
            "description": "Filter by review status"
          },
          {
            "name": "positive",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["any", "yes", "no"]
            },
            "description": "Filter by AI prediction"
          },
          {
            "name": "valid",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["any", "yes", "no"]
            },
            "description": "Filter by validation status"
          },
          {
            "name": "region",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Filter by anatomic region"
          },
          {
            "name": "status",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Filter by processing status"
          },
          {
            "name": "search",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Filter by patient name"
          }
        ],
        "responses": {
          "200": {
            "description": "Exams data with pagination info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "exams": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Exam"
                      }
                    },
                    "total": {
                      "type": "integer"
                    },
                    "pages": {
                      "type": "integer"
                    },
                    "filters": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/stats": {
      "get": {
        "summary": "Get statistics",
        "description": "Provide statistical data for the dashboard",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Statistical data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Stats"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/config": {
      "get": {
        "summary": "Get configuration",
        "description": "Provide global configuration parameters to the frontend",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Configuration parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Config"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/regions": {
      "get": {
        "summary": "Get regions",
        "description": "Provide supported regions for the frontend dropdown",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of regions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/validate": {
      "post": {
        "summary": "Validate exam",
        "description": "Mark a study as valid or invalid based on human review",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ValidateRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Validation result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "uid": {
                      "type": "string"
                    },
                    "valid": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/lookagain": {
      "post": {
        "summary": "Re-queue exam",
        "description": "Send an exam back to the processing queue for re-analysis",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LookAgainRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Re-queue status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "uid": {
                      "type": "string"
                    },
                    "valid": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/trigger_query": {
      "post": {
        "summary": "Trigger DICOM query",
        "description": "Trigger a manual DICOM query/retrieve operation",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/QueryRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Operation status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/check": {
      "post": {
        "summary": "Check report",
        "description": "Analyze a free-text radiology report for pathological findings",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CheckReportRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Analysis results",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CheckReportResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/spec": {
      "get": {
        "summary": "Get API specification",
        "description": "Serve the OpenAPI specification file",
        "responses": {
          "200": {
            "description": "OpenAPI specification",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "basicAuth": []
    }
  ]
}
